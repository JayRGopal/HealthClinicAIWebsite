generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  author    String
  tagline   String
  content   String
  mainImage String
  imageUrls String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

